extends base.pug
block metaElements
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(name="robots" content="INDEX, FOLLOW")
    meta(name="keywords" content="AJKart login, Login to AJKart, Account login AJKart, Sign in AJKart, User login AJKart, Customer login AJKart, Secure login AJKart, Access my account AJKart, Member login AJKart, Login credentials AJKart, Login portal AJKart, Login page AJKart, Login process AJKart, AJKart account access, Account authentication AJKart, Login form AJKart, Login verification AJKart, Login security AJKart, Login details AJKart, Login procedure AJKart")
    meta(name="description" content=`Unlock exclusive benefits and seamless shopping by logging in to AJKart. Your security is our priority, providing a secure and user-friendly login process. Enjoy personalized offers and easy access to a wide range of products. Join AJKart today for a rewarding shopping experience.`)
block style
    include ../static/css/forgot.css
    include ../static/css/otp.css
    include ../static/css/input.css
block title 
    title AJWS | Forgot 
block content 
    section.forgot-container
        .left 
            .left-head
                p.forgot-head Forgot Password 
                p.welcome-text Welcome back! Let's secure your shopping experience.
            img(src='../static/img/water-flash-2.png').design-img 
        .right#form-section
            if (section == "Email")
                form(action="", method="post").auth-from#auth-form
                    if (message && message.path == "general")
                        .warning 
                            p #{message.msg} 
                    .input
                        input.input-element(type="email", name="email",id="email",required="required",value=`${otherDetails?otherDetails.phone:''}`)
                        label.input-label(for="email") Enter Your Email
                    button.btn(type="button", onclick="otpGeneration('forgot')") Next
            else if (section == "Password")
                form(action="/forgot/change-password", method="post").auth-from
                    if (message && message.path == "general")
                        .warning 
                            p #{message.msg} 
                    .input
                        input.input-element(type="password", name="password",id="password",required="required")
                        label.input-label(for="password") Enter New Password
                        label.view-password(for="password", onclick="changeView(this)")
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                              <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                              <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                            </svg>
                    if (message && message.path == "password")
                        .warn #{message.msg}
                    .input
                        input.input-element(type="password", name="confirm",id="confirm",required="required")
                        label.input-label(for="confirm") Confirm Password
                        label.view-password(for="password", onclick="changeView(this)")
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16">
                              <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8M1.173 8a13 13 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5s3.879 1.168 5.168 2.457A13 13 0 0 1 14.828 8q-.086.13-.195.288c-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5s-3.879-1.168-5.168-2.457A13 13 0 0 1 1.172 8z"/>
                              <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5M4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0"/>
                            </svg>
                    button.btn(type="submit") Change Password
            a.anLink(href="/login") Already have an account? Log In
block scripts 
    script(src="/static/js/input.js") 
    script(src="/static/js/register.js") 